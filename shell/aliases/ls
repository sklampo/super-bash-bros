# shellcheck shell=bash

# Colorize output.
alias ls='ls -G'

# Comma-delimited listing.  Thanks HP-UX.
alias l='ls -m'

# Long listing.  Thanks RedHat.
alias ll='ls -l'

# List hidden files only.  Ripped straight from RedHat.
alias l.='ls -d .*'

# shellcheck disable=SC2142
# List printers.
alias lsp="lpstat -p | awk \"{print \\\$2}\""
